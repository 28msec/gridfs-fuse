SET(CPACK_INSTALL_CMAKE_PROJECTS 
      "@CMAKE_BINARY_DIR@;GridFsFuse;GridFsFuse;/" 
)

SET(CPACK_PACKAGE_VENDOR "28msec Inc.")
SET(CPACK_PACKAGE_CONTACT "support@28msec.com <28msec Inc.>")
SET(CPACK_PACKAGE_VERSION_MAJOR "@GRIDFS_MAJOR_VERSION@")
SET(CPACK_PACKAGE_VERSION_MINOR "@GRIDFS_MINOR_VERSION@")
SET(CPACK_PACKAGE_VERSION_PATCH "@GRIDFS_PATCH_VERSION@")
SET(CPACK_PACKAGE_FILE_NAME "@GridFs_PACKAGE_FILE_NAME@")
SET(CPACK_CMAKE_GENERATOR "@CMAKE_GENERATOR@")

SET(CPACK_PACKAGE_NAME "GridFs-Fuse")
SET(CPACK_PACKAGE_DESCRIPTION_FILE "@CMAKE_CURRENT_SOURCE_DIR@/Description.txt")
SET(CPACK_PACKAGE_DESCRIPTION_SUMMARY "GridFs Fuse: A Fuse based filesystem for Mongo DB's GridFs")
SET(CPACK_PACKAGE_VERSION "@GRIDFS_MAJOR_VERSION@.@GRIDFS_MINOR_VERSION@.@GRIDFS_PATCH_VERSION@")
SET(CPACK_RESOURCE_FILE_LICENSE "@CMAKE_CURRENT_SOURCE_DIR@/Copyright.txt")
SET(CPACK_RESOURCE_FILE_README "@CMAKE_CURRENT_SOURCE_DIR@/README.txt")
SET(CPACK_RESOURCE_FILE_WELCOME "@CMAKE_CURRENT_SOURCE_DIR@/Welcome.txt")
SET(CPACK_PACKAGE_INSTALL_DIRECTORY "GridFs-Fuse-@GRIDFS_MAJOR_VERSION@.@GRIDFS_MINOR_VERSION@.@GRIDFS_PATCH_VERSION@")

#NSIS package
SET(CPACK_NSIS_MODIFY_PATH ON)
SET(CPACK_NSIS_PACKAGE_NAME "GridFs")

IF (UNIX)
  SET(CPACK_PACKAGING_INSTALL_PREFIX "/opt/gridfs-fuse-${CPACK_PACKAGE_VERSION}")
ENDIF (UNIX)

#Debian package
STRING(TOLOWER CPACK_DEBIAN_PACKAGE_NAME ${CPACK_PACKAGE_NAME})
SET(CPACK_DEBIAN_VERSION @CPACK_PACKAGE_VERSION@)
SET(CPACK_DEBIAN_PACKAGE_DEPENDS "@GridFs_DEBIAN_REQUIRED_DEPENDENCIES@")
SET(CPACK_DEBIAN_PACKAGE_MAINTAINER support@28msec.com)
SET(DEBIAN_PACKAGE_ARCHITECTURE i386)
SET(DEBIAN_PACKAGE_DESCRIPTION @CPACK_PACKAGE_DESCRIPTION_SUMMARY@)
SET(DEBIAN_PACKAGE_SECTION devel)

#SUSE RPM package
SET(CPACK_RPM_PACKAGE_SUMMARY ${CPACK_PACKAGE_DESCRIPTION_SUMMARY})
STRING(TOLOWER CPACK_RPM_PACKAGE_NAME ${CPACK_PACKAGE_NAME})
SET(CPACK_RPM_PACKAGE_VERSION @GRIDFS_MAJOR_VERSION@.@GRIDFS_MINOR_VERSION@.@GRIDFS_PATCH_VERSION@)
SET(CPACK_RPM_PACKAGE_RELEASE 1)
SET(CPACK_RPM_PACKAGE_LICENSE @CPACK_RPM_PACKAGE_LICENSE@)
SET(CPACK_RPM_PACKAGE_GROUP "unknown")
SET(CPACK_RPM_PACKAGE_VENDOR "28msec Inc.")
SET(CPACK_RPM_PACKAGE_DESCRIPTION @CPACK_RPM_PACKAGE_DESCRIPTION@)
SET(CPACK_RPM_PACKAGE_REQUIRES "bash-completion")

#mac
SET(CPACK_PACKAGE_RELOCATABLE "false")
